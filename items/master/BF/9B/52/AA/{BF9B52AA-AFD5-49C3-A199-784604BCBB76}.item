IF(@SiteNameId IS NULL AND @ItemId IS NULL)
	(SELECT
		MIN(SiteNameId) AS SiteNameId,
		SUM(Views) AS Views,
		SUM(Value) AS Value
	FROM
		[Fact_PageViewsByLanguage]
	WHERE
		[Date] >= @StartDate 
		AND	[Date] <= @EndDate
		AND [SiteNameId] = SiteNameId
		AND	[ItemId] = ItemId)
ELSE IF (@SiteNameId IS NULL AND @ItemId IS NOT NULL)
	(SELECT
		MIN(SiteNameId) AS SiteNameId,
		SUM(Views) AS Views,
		SUM(Value) AS Value
	FROM
		[Fact_PageViewsByLanguage]
	WHERE
		[Date] >= @StartDate 
		AND	[Date] <= @EndDate
		AND [SiteNameId] = SiteNameId
		AND	[ItemId] = @ItemId)
ELSE IF (@SiteNameId IS NOT NULL AND @ItemId IS NULL)
	(SELECT
		MIN(SiteNameId) AS SiteNameId,
		SUM(Views) AS Views,
		SUM(Value) AS Value
	FROM
		[Fact_PageViewsByLanguage]
	WHERE
		[Date] >= @StartDate 
		AND	[Date] <= @EndDate
		AND [SiteNameId] = @SiteNameId
		AND	[ItemId] = ItemId)
ELSE IF (@SiteNameId IS NOT NULL AND @ItemId IS NOT NULL)
	(SELECT
		MIN(SiteNameId) AS SiteNameId,
		SUM(Views) AS Views,
		SUM(Value) AS Value
	FROM
		[Fact_PageViewsByLanguage]
	WHERE
		[Date] >= @StartDate 
		AND	[Date] <= @EndDate
		AND [SiteNameId] = @SiteNameId
		AND	[ItemId] = @ItemId)

